<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>
    <div id="container">
        <header>
            <div id="headerContent">
                <ul id="navlist">
                    <li><a href="/" id="current">Home</a></li>
                    <li><a href="/Store/">Store</a></li>
                    <li id="searchForm">@using (Html.BeginForm("Search", "Store", FormMethod.Get)){ @Html.TextBox("Querry")  <input type="submit" value="Find" /> }</li>
                    <li id="shoppingCart">@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
                </ul>
            </div>
            
        </header>
        <section>
            @{Html.RenderAction("TeaTypesMenu", "Store");}
            @RenderBody()
        </section>
        <footer>
            <div id="footerContent"><p>&copy; stefgust</p></div>
        </footer>
    </div>
</body>
</html>
